<div class="container">
  <div class="row justify-content-center my-3">
    <div class="col-sm-8">
      <%# <form action='' method=''> %>
      <%= form_with url: movies_path, method: :get, class: 'd-flex mb-3' do %>
        <%# <input type="text" name="" value='' id=""> %>
        <%= text_field_tag :query, params[:query], class: 'form-control' %>
        <%= submit_tag 'Search', class: 'btn btn-primary' %>
      <% end %>
      <% @movies.each do |movie| %>
        <h4><%= movie.title %></h4>
        <small><%= movie.director.first_name %> <%= movie.director.last_name %></small>
        <p><%= movie.synopsis %></p>
      <% end %>
    </div>
  </div>
</div>
